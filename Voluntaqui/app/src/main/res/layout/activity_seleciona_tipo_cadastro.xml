<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9800"
    tools:context=".SelecionaTipoCadastro">

    <Button
        android:id="@+id/btnAjuda"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginBottom="60dp"
        android:background="@android:color/background_light"
        android:clickable="false"
        android:scrollbarThumbHorizontal="@android:color/background_light"
        android:text="AJUDA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAjudante"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:text="AJUDANTE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAjuda" />

</androidx.constraintlayout.widget.ConstraintLayout>